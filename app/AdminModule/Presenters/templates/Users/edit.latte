{block header_tmpl}
{/block}

{block header}
{/block}

{block content}
    <div class="row mt-3">
        <div class="col">
            <h1 class="h3">{_"User"}{if $userData} - {$userData->username}{/if}
                <div n:if="$userData" class="ms-auto d-inline-block">
                    <a n:href="signInAsUser! $userData->id" class="btn btn-sm btn-outline-secondary">
                        {_"Sign in as user"}
                    </a>
                </div>
            </h1>
            {control adminMenu:breadcrumbs}
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <h2 class="h4">Settings</h2>
            {control editForm}
        </div>
        <div class="col-8" n:if="$userData">
            <h2 class="h4">Permissions</h2>
            {control permissionsDatagrid:user, $userData->id}
        </div>
    </div>
{/block}